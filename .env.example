# Environment Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Database Configuration
DATABASE_URL=sqlite:///./aegis_isle.db
VECTOR_DB_TYPE=qdrant  # Options: qdrant, chromadb, pinecone, faiss
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=aegis_isle_documents

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, huggingface
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Settings
DEFAULT_LLM_MODEL=gpt-4-1106-preview
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=4096
TEMPERATURE=0.7

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RETRIEVED_DOCS=5
SIMILARITY_THRESHOLD=0.7

# Agent Configuration
MAX_AGENT_ITERATIONS=10
AGENT_TIMEOUT=300  # seconds
ENABLE_MEMORY=True

# File Processing
UPLOAD_MAX_SIZE=50MB
SUPPORTED_FORMATS=pdf,docx,txt,md,html
OCR_ENABLED=True
OCR_LANGUAGE=eng+chi_sim  # English + Simplified Chinese

# Security & Authentication
SECRET_KEY=your_api_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=localhost,127.0.0.1

# OAuth2 + RBAC Authentication
# Default admin user (configure in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# JWT Token Configuration
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=your_api_key_here

# User Database (for development - use real database in production)
# Users are currently stored in memory for demo purposes
# In production: use PostgreSQL/MySQL with proper user management

# Monitoring & Logging
ENABLE_METRICS=True
METRICS_PORT=9090
LOG_REQUESTS=True

# Audit Logging Configuration
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=365
STRUCTURED_LOGGING=True
ELK_COMPATIBLE=True

# Redis (for caching and session storage)
REDIS_URL=redis://localhost:6379/0

# Multi-modal
ENABLE_MULTIMODAL=True
IMAGE_PROCESSING_ENABLED=True
VISION_MODEL=your_MODEL_here